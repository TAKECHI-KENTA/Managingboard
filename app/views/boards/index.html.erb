        textposition: 'auto',
        insidetextanchor: 'middle',
        hoverinfo: 'x',
        marker: {
          color: 'rgba(217, 217, 217, 1)'
          }
      };
      var data = [trace1, trace2];
      var layout = {
        barmode: 'stack',
        legend: {
                  x: 0.5,
