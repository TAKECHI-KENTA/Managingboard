    <script>
      COST_CHART = document.getElementById('cost_chart');
      var allValues = <%= @cost_prev_1month_array_values %>;
      var allLabels = <%= @cost_prev_1month_array_labels %>;
      var data = [{
        values: allValues,
        labels: allLabels,
