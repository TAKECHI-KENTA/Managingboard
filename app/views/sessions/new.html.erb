<%# ログイン機能 %>
<div class="users-new-wrapper">
  <div class="title-logo">
    経営管理 for freee (ベータ版)
  </div>
  
  <div class="container background-white">
    <div class="row">
      <div class="col-md-offset-2 col-md-8 users-new-container">
        <h3 class="text-center text-gray">登録済みアカウントでログイン</h3>
        <%= form_for :session, url: login_path do |f| %>
          <div class="form-group">
            <%= f.label :メールアドレス, class: 'form-label text-gray' %>
            <%= f.text_field :email, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :パスワード, class: 'form-label text-gray' %>
            <%= f.password_field :password, class: 'form-control' %>
          </div>
          <div class="signup-login-btn">
            <%= f.submit "ログイン", class: 'btn btn-primary' %> <%#ボタンを幅広げたい。ログインを中央ゾロえ%>
          </div>
        <% end %>
        <div class="login-signup-link">
          <%= link_to 'まだアカウントをお持ちでない方はこちら', new_user_path %>
        </div>
      </div>
    </div>
  </div>

</div>